{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <fieldset style="border:10px solid black;padding :30px;">
    <center><legend style="background-color: black;color: #fff;padding: 5px 10px;">Utilisateur</legend></center>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-primary mb-3">back to list</a>
    {% if app.user and app.user.roles[0]=="ROLE_ADMIN"  %}
    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning mb-3">edit</a>
    {{ include('user/_delete_form.html.twig') }}
    {% endif  %}
{% endblock %}
