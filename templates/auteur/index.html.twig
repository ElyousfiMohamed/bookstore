{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
    {% endfor %}
    <fieldset style="border:10px solid #1B5E20;padding :30px;background:#A5D6A7">
    <center><legend style="background-color: #1B5E20;color: #fff;padding: 5px 10px;">"Auteur"</legend></center>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_prenom</th>
                <th>Sexe</th>
                <th>Date_de_naissance</th>
                <th>Nationalite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nomPrenom }}</td>
                <td>{{ auteur.sexe }}</td>
                <td>{{ auteur.dateDeNaissance|date('d-m-Y') }} </td>
                <td>{{ auteur.nationalite }}</td>
                <td>
                {% if app.user and app.user.roles[0]=="ROLE_ADMIN"  %}
                    <a href="{{ path('auteur_show', {'id': auteur.id}) }}">show</a>
                    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">edit</a>
                {% endif  %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user and app.user.roles[0]=="ROLE_ADMIN"  %}
    <a href="{{ path('auteur_new') }}">Create new</a>
    {% endif  %}
    </fieldset>
{% endblock %}
